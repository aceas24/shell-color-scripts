#!/bin/sh
  
# Author: Aceas24
# ANSI Color -- use these variables to easily have different color
#    and format output. Make sure to output the reset sequence after 
#    colors (f = foreground, b = background), and use the 'off'
#    feature for anything you turn on.

initializeANSI()
{
  esc=""

  redf="${esc}[31m";     greenf="${esc}[32m"
  yellowf="${esc}[33m"   bluef="${esc}[34m";   
  cyanf="${esc}[36m";    purplef="${esc}[35m"   
  
  redfbright="${esc}[91m";     greenfbright="${esc}[92m"
  yellowfbright="${esc}[93m"   bluefbright="${esc}[94m";   
  cyanfbright="${esc}[96m";    purplefbright="${esc}[95m"   
                      
  boldon="${esc}[1m";    
  reset="${esc}[0m"
}


initializeANSI

cat << EOF 
  
${boldon}${redfbright}     â– â– â– â– â– â–      ${boldon}${greenfbright}     â– â–       ${boldon}${yellowfbright}   â– â– â– â– â– â– â– â– â–    ${boldon}${bluefbright}   â– â– â– â– â– â– â– â– â– â– â–    ${boldon}${purplefbright}   â– â– â– â– â– â– â– â– â– â– â–   ${boldon}${cyanfbright}   â– â– â– â– â– â– â– â– â– â– â–   ${reset}
${boldon}${redfbright}     â– â– â– â– â– â– â–     ${boldon}${greenfbright}     â– â–       ${boldon}${yellowfbright}   â– â– â– â– â– â– â– â– â–    ${boldon}${bluefbright}   â– â– â– â– â– â– â– â– â– â– â–    ${boldon}${purplefbright}   â– â– â– â– â– â– â– â– â– â– â–   ${boldon}${cyanfbright}   â– â– â– â– â– â– â– â– â– â– â–   ${reset}
${boldon}${redfbright}     â– â–     â– â–    ${boldon}${greenfbright}     â– â–       ${boldon}${yellowfbright}    â– â–          ${boldon}${bluefbright}       â– â–         ${boldon}${purplefbright}   â– â–       â– â–    ${boldon}${cyanfbright}   â– â–        â– â–   ${reset}
${redf}     â– â–      â– â–   ${greenf}     â– â–       ${yellowf}     â– â– â– â– â–      ${bluef}       â– â–         ${purplef}   â– â– â– â– â– â– â– â–      ${cyanf}   â– â–        â– â–   ${reset}
${redf}     â– â–     â– â–    ${greenf}     â– â–       ${yellowf}         â– â–     ${bluef}       â– â–         ${purplef}   â– â– â– â– â– â– â– â–      ${cyanf}   â– â–        â– â–   ${reset}
${redf}     â– â– â– â– â– â– â–     ${greenf}     â– â–       ${yellowf}   â– â– â– â– â– â– â– â– â–    ${bluef}       â– â–         ${purplef}   â– â–        â– â–   ${cyanf}   â– â– â– â– â– â– â– â– â– â– â–   ${reset}
${redf}     â– â– â– â– â– â–      ${greenf}     â– â–       ${yellowf}   â– â– â– â– â– â– â– â– â–    ${bluef}       â– â–         ${purplef}   â– â–        â– â–   ${cyanf}   â– â– â– â– â– â– â– â– â– â– â–   ${reset} 
EOF

cat << EOF 
  
${boldon}${bluefbright}           â– â– â– â– â– â– â– â– â– â– â–    ${boldon}${cyanfbright}    â– â–        â– â–    ${boldon}${redfbright}    â– â– â– â– â– â– â– â– â– â– â–   ${boldon}${greenfbright}    â– â– â– â– â– â– â– â– â– â– â–   ${reset}
${boldon}${bluefbright}           â– â– â– â– â– â– â– â– â– â– â–    ${boldon}${cyanfbright}    â– â–        â– â–    ${boldon}${redfbright}    â– â– â– â– â– â– â– â– â– â– â–   ${boldon}${greenfbright}    â– â– â– â– â– â– â– â– â– â– â–   ${reset}
${boldon}${bluefbright}               â– â–         ${boldon}${cyanfbright}    â– â–        â– â–    ${boldon}${redfbright}    â– â–       â– â–    ${boldon}${greenfbright}    â– â– â–           ${reset}
${bluef}               â– â–         ${cyanf}    â– â–        â– â–    ${redf}    â– â– â– â– â– â– â– â– â–     ${greenf}    â– â– â– â– â–         ${reset}
${bluef}               â– â–         ${cyanf}    â– â–        â– â–    ${redf}    â– â–       â– â–    ${greenf}    â– â– â–           ${reset}
${bluef}               â– â–         ${cyanf}    â– â– â– â– â– â– â– â– â– â– â–    ${redf}    â– â– â– â– â– â– â– â– â– â– â–   ${greenf}    â– â– â– â– â– â– â– â– â– â– â–   ${reset}
${bluef}               â– â–         ${cyanf}    â– â– â– â– â– â– â– â– â– â– â–    ${redf}    â– â– â– â– â– â– â– â– â– â– â–   ${greenf}    â– â– â– â– â– â– â– â– â– â– â–   ${reset} 
EOF